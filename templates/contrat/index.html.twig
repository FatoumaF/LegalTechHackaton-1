<div class="az-content az-content-dashboard">
    <div class="container">
        <div class="az-content-body">
            <h2 class="az-content-title">Liste des Contrats</h2>
            <div class="mb-4">
                <a href="{{ path('app_contrat_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Ajouter un contrat
                </a>
                <a href="{{ path('app_contrat_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Générez un Contrat
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Titre</th>
                            <th scope="col">Description</th>
                            <th scope="col">Date de Début</th>
                            <th scope="col">Date de Fin</th>
                            <th scope="col">Parties Impliquées</th>
                            <th scope="col">Statut</th>
                            <th scope="col">PDF</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if contrats is empty %}
                            <tr>
                                <td colspan="9" class="text-center">Aucun contrat trouvé</td>
                            </tr>
                        {% else %}
                            {% for contrat in contrats %}
                                <tr>
                                    <th scope="row">{{ contrat.id }}</th>
                                    <td>{{ contrat.titre }}</td>
                                    <td>{{ contrat.description }}</td>
                                    <td>{{ contrat.dateDebut ? contrat.dateDebut|date('d/m/Y') : '' }}</td>
                                    <td>{{ contrat.dateFin ? contrat.dateFin|date('d/m/Y') : 'Non définie' }}</td>
                                    <td>{{ contrat.partiesImpliquees }}</td>
                                    <td>{{ contrat.statut }}</td>
                                    <td>
                                        {% if contrat.pdfFile %}
                                            <a href="{{ asset('uploads/pdfs/' ~ contrat.pdfFile) }}" target="_blank" class="btn btn-secondary btn-sm">Télécharger PDF</a>
                                        {% else %}
                                            Non disponible
                                        {% endif %}
                                    </td>
                                    <td>
                                     <a href="{{ path('app_contrat_show', { 'id': contrat.id }) }}" class="btn btn-outline-secondary btn-sm">Voir</a>
                                     <a href="{{ path('app_contrat_edit', { 'id': contrat.id }) }}" class="btn btn-outline-dark btn-sm">Modifier</a>
                                     <a href="{{ path('app_contrat_delete', { 'id': contrat.id }) }}" class="btn btn-outline-danger btn-sm"
                                    
                                     onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce contrat ?');">Supprimer</a>

                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
